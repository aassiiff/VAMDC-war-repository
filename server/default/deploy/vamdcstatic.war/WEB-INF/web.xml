<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
	<display-name>xsams-views-webapp</display-name>
    <servlet>
        <servlet-name>LineListServlet</servlet-name>
        <servlet-class>eu.vamdc.xsams.views.LineListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StateListServlet</servlet-name>
        <servlet-class>eu.vamdc.xsams.views.StateListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SelectedStateServlet</servlet-name>
        <servlet-class>eu.vamdc.xsams.views.SelectedStateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LineListServlet</servlet-name>
        <url-pattern>/line-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StateListServlet</servlet-name>
        <url-pattern>/state-list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SelectedStateServlet</servlet-name>
        <url-pattern>/state</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
